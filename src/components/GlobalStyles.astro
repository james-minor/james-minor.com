<style is:global>
	:root {
		/* Color Properties */
		--col-body-background: #111316;
		--col-navbar-background: #17191C;

		--col-text: #FFFFFF;
		
		/* Sizing Properties */
		--navbar-height: 3rem;
	}
	
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		font: inherit;
		font-family: sans-serif;
	}

	img,
	picture,
	svg,
	video {
		display: block;
		max-width: 100%;
	}

	html {
		scroll-behavior: smooth;
		scroll-padding: var(--navbar-height);
	}
	
	body {
		background-color: var(--col-body-background);
		color: var(--col-text);
	}
	
	p {
		line-height: 1.6;
		max-width: 70ch;
		
		font-size: 1.25rem;
	}
	
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-weight: bold;
	}
	
	h1 {
		font-size: 2.75rem;
	}
	
	h2 {
		font-size: 2.5rem;
	}

	h3 {
		font-size: 2.25rem;
	}

	h4 {
		font-size: 2rem;
	}
	
	h5 {
		font-size: 1.75rem;
	}

	h6 {
		font-size: 1.5rem;
	}
	
	@media (prefers-reduced-motion) {
		html {
			scroll-behavior: auto;
		}
	}
</style>